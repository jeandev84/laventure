{
  "name": "laventure/application",
  "description": "A simple PHP framework for building web application using mvc",
  "license": "MIT",
  "authors": [
    {
      "name": "Yao Kouassi Jean-Claude",
      "email": "jeanyao@ymail.com"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "php": ">= 8.1",
    "ext-curl": "*",
    "ext-fileinfo": "*",
    "ext-pdo": "*",
    "laventure/framework": "dev-master"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "phpunit/phpunit": "^9.5",
    "spatie/phpunit-watcher": "^1.23",
    "squizlabs/php_codesniffer": "^3.8",
    "symfony/var-dumper": "^6.4"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  }
}
